<p id="notice"><%= notice %></p>

<h1>Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td>        <%= image_tag ingredient.image %>
</td>

        <td><%= ingredient.image %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_ingredient_path %>



      <div class= "ingredients-container">
        <div class="ingredients-display-recipe-show">
          <% @ingredients.each do |ing| %>
          <div class="ingredient-avatar-card">
          <%= image_tag "#{ing.image}" , class: "ingredient-avatar" %>
          <%= ing.name.capitalize %>
        <!--   (<%= ing.id %>) -->
          </div>
          <% end %>
        </div>

      </div>

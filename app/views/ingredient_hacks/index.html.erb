<p id="notice"><%= notice %></p>

<h1>Ingredient Hacks</h1>

<table>
  <thead>
    <tr>
      <th>Hack</th>
      <th>Ingredient preservation</th>
      <th>Hack category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredient_hacks.each do |ingredient_hack| %>
      <tr>
        <td><%= ingredient_hack.hack %></td>
        <td><%= ingredient_hack.ingredient_preservation %></td>
        <td><%= ingredient_hack.hack_category %></td>
        <td><%= link_to 'Show', ingredient_hack %></td>
        <td><%= link_to 'Edit', edit_ingredient_hack_path(ingredient_hack) %></td>
        <td><%= link_to 'Destroy', ingredient_hack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


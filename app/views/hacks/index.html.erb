<p id="notice"><%= notice %></p>

<h1>Hacks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Youtube url</th>
      <th>Publish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hacks.each do |hack| %>
      <tr>
        <td><%= hack.title %></td>
        <td><%= hack.description %></td>
        <% if hack.image.attached? %>
        <td><%= cl_image_tag hack.image.key, height: 150, width: 300, crop: :fill %></td>
        <% end %>
<!--         <td><%= hack.image %></td> -->
        <td><iframe width="490" height="275" src="https://www.youtube.com/embed/<%= hack.youtube_url %>" frameborder="0" allowfullscreen ></iframe></td>
     <!--    <td><%= hack.youtube_url %></td> -->
        <td><%= hack.publish %></td>
        <td><%= link_to 'Show', hack %></td>
        <td><%= link_to 'Edit', edit_hack_path(hack) %></td>
        <td><%= link_to 'Destroy', hack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hack', new_hack_path %>
